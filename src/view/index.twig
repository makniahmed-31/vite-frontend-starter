{% extends 'template/layout/main.twig' %}

{% block page %}
	<div class="container">

		<div class="row gap-xs">
			<div class="col-xs-12 col-md-8 order-xs-2 order-md-1">

				<section class="section section_offset">
					<h2 id="how-to-use" class="section__title">How to use</h2>
					<div class="box mt-4">
						<div class="box__body">
							<h4>Instalation</h4>
							<ol>
								<li>
									<span class="label label_info">
										git clone {{ APP_REPOSITORY }}.git
									</span>
									<span>- clone or download</span>
									<a href="{{ APP_REPOSITORY }}" target="_blank">repository from GitHub</a>
								</li>
								<li>
									<span class="label label_info">cd {{ APP_NAME }}</span>
									<span>- go to the folder</span>
								</li>
								<li>
									<span class="label label_info">npm i</span>
									<span>- install packages</span>
								</li>
							</ol>

							<h4>Development</h4>
							<ul>
								<li>
									<span class="label label_info">npm run dev</span>
									<span>- start development mode with live-server</span>
								</li>
							</ul>

							<h4>Building</h4>
							<ul>
								<li>
									<span class="label label_info">npm run build</span>
									<span>or</span>
									<span class="label label_info">npm run prod</span>
									<span>- build static files for production</span>
								</li>
								<li>
									<span class="label label_info">npm run preview</span>
									<span>- start server for build preview</span>
								</li>
							</ul>
						</div>
					</div>
				</section>

				<section id="features" class="section section_offset">
					<h2 class="section__title">Features</h2>
					<div class="box mt-4">
						<div class="box__body">
							<ul>
								{% for feature in homePage.features %}
									<li>{{feature}}</li>
								{% endfor %}
							</ul>
						</div>
					</div>
				</section>

				<section id="grid" class="section section_offset">
					<h2 class="section__title">Grid</h2>
					<div class="box mt-4">
						<div class="box__header">
							<h3 class="box__subtitle">
								<span>Example #1: grow and auto width columns controlled with</span>
								<span class="label label_info">.fill</span>
								<span>class</span>
							</h3>
						</div>
						<div class="box__body">
							<div class="row fill">
								<div class="col">
									<div class="border radius p-2 text-center">Grow column</div>
								</div>
								<div class="col col-auto">
									<div class="border radius p-2 text-center">Auto column</div>
								</div>
								<div class="col">
									<div class="border radius p-2 text-center">Grow column</div>
								</div>
							</div>
						</div>
					</div>

					<div class="box mt-4">
						<div class="box__header">
							<h3 class="box__subtitle">
								<span>Example #2: equal-width columns defined in</span>
								<span class="label label_info">.row</span>
								<span>with</span>
								<span class="label label_info">.cols-{breakpoint}-{size}</span>
								<span>syntax</span>
							</h3>
						</div>
						<div class="box__body">
							<div class="row cols-xs-2 cols-md-4">
								<div class="col">
									<div class="border radius p-2 text-center">1 column</div>
								</div>
								<div class="col">
									<div class="border radius p-2 text-center">2 column</div>
								</div>
								<div class="col">
									<div class="border radius p-2 text-center">3 column</div>
								</div>
								<div class="col">
									<div class="border radius p-2 text-center">4 column</div>
								</div>
								<div class="col">
									<div class="border radius p-2 text-center">5 column</div>
								</div>
								<div class="col">
									<div class="border radius p-2 text-center">6 column</div>
								</div>
								<div class="col">
									<div class="border radius p-2 text-center">7 column</div>
								</div>
								<div class="col">
									<div class="border radius p-2 text-center">8 column</div>
								</div>
							</div>
						</div>
					</div>

					<div class="box mt-4">
						<div class="box__header">
							<h3 class="box__subtitle">
								<span>Example #3: control column width in each</span>
								<span class="label label_info">.col</span>
								<span>with</span>
								<span class="label label_info">.col-{breakpoint}-{size}</span>
								<span>syntax</span>
							</h3>
						</div>
						<div class="box__body">
							<div class="row">
								<div class="col-xs-12 col-md-3">
									<div class="border radius p-2 text-center">1 column</div>
								</div>
								<div class="col-xs-12 col-md-6">
									<div class="border radius p-2 text-center">2 column</div>
								</div>
								<div class="col-xs-12 col-md-3">
									<div class="border radius p-2 text-center">3 column</div>
								</div>
								<div class="col-xs-12">
									<div class="border radius p-2 text-center">4 column</div>
								</div>
							</div>
						</div>
					</div>

					<div class="box mt-4">
						<div class="box__header">
							<h3 class="box__subtitle">
								<span>Example #4: offset columns with</span>
								<span class="label label_info">.offset-{breakpoint}-{size}</span>
								<span>syntax</span>
							</h3>
						</div>
						<div class="box__body">
							<div class="row">
								<div class="col-xs-12 col-md-3">
									<div class="border radius p-2 text-center">1 column</div>
								</div>
								<div class="col-xs-12 col-md-3 offset-md-3">
									<div class="border radius p-2 text-center">2 column</div>
								</div>
								<div class="col-xs-12 col-md-3 offset-md-3">
									<div class="border radius p-2 text-center">3 column</div>
								</div>
								<div class="col-xs-12 col-md-3 offset-md-3">
									<div class="border radius p-2 text-center">4 column</div>
								</div>
							</div>
						</div>
					</div>

					<div class="box mt-4">
						<div class="box__header">
							<h3 class="box__subtitle">
								<span>Example #5: row gaps controlled with</span>
								<span class="label label_info">.gap-{breakpoint}</span>
								<span>for XY axes,</span>
								<span class="label label_info">.gap-{breakpoint}-x</span>
								<span>for X axis or</span>
								<span class="label label_info">.gap-{breakpoint}-y</span>
								<span>for Y axis syntax defined in</span>
								<span class="label label_info">.row</span>
								<span>class</span>
							</h3>
						</div>
						<div class="box__body">
							<div class="row fill gap-xs cols-xs-2 cols-md-4">
								<div class="col">
									<div class="border radius p-2 text-center">1 column</div>
								</div>
								<div class="col">
									<div class="border radius p-2 text-center">2 column</div>
								</div>
								<div class="col">
									<div class="border radius p-2 text-center">3 column</div>
								</div>
								<div class="col">
									<div class="border radius p-2 text-center">4 column</div>
								</div>
								<div class="col">
									<div class="border radius p-2 text-center">5 column</div>
								</div>
								<div class="col">
									<div class="border radius p-2 text-center">6 column</div>
								</div>
							</div>
						</div>
					</div>
				</section>

			</div>

			<div class="col-xs-12 col-md-4 align-self-start position-sticky order-xs-1 order-md-2 bg-body">
				<section class="section section_offset">
					<h2 class="section__title">Contents</h2>
					<ul class="mt-3">
						<li>
							<a href="#how-to-use">How to use</a>
						</li>
						<li>
							<a href="#features">Features</a>
						</li>
						<li>
							<a href="#grid">Grid</a>
						</li>
					</ul>
				</section>
			</div>
		</div>

	</div>
{% endblock %}
